<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Window chrome -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Attributes for MaterialBottomDialog -->
        <item name="dialogSheetBackground">@android:color/white</item>
        <item name="dialogSheetIconTintColor">@color/headerText</item>
        <item name="dialogSheetLabelTintColor">@color/headerText</item>
        <item name="dialogSheetCornerRadius">@dimen/material_card_corner_radius</item>
        <item name="dialogSheetLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IntroductionImageCreditText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:textColorLink">@color/bodyText</item>
        <item name="android:layout_marginBottom">@dimen/material_small_padding</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="DividerWithMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/material_default_padding</item>
        <item name="android:layout_marginBottom">@dimen/material_default_padding</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="BodyTextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="DurationExplanationTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:padding">@dimen/material_default_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardPrimaryTextView">
        <item name="android:textColor">@color/headerText</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardSecondaryTextView">
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardSupportingTextView">
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:alpha">0.54</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardSupportingErrorTextView">
        <item name="android:alpha">0.87</item>
        <item name="android:textColor">@color/errorText</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
