<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/divider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@null</item>
    </style>

    <style name="IntroductionImageCreditText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:textColorLink">@color/bodyText</item>
        <item name="android:layout_marginBottom">@dimen/material_small_padding</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="DividerWithMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/material_default_padding</item>
        <item name="android:layout_marginBottom">@dimen/material_default_padding</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="BodyTextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="DurationExplanationTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:padding">@dimen/material_default_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardPrimaryTextView">
        <item name="android:textColor">@color/headerText</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardSecondaryTextView">
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardSupportingTextView">
        <item name="android:textColor">@color/bodyText</item>
        <item name="android:alpha">0.54</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardSupportingErrorTextView">
        <item name="android:alpha">0.87</item>
        <item name="android:textColor">@color/errorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomDialog" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomDialog</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/white</item>
    </style>

    <style name="BottomDialogItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/material_default_padding</item>
    </style>

    <style name="BottomDialogItemLabel">
        <item name="android:textColor">@color/headerText</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/material_default_padding</item>
    </style>

</resources>
